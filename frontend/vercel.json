{
    "version": 2,
    "routes": [
        {
            "src": "/api/auth/login",
            "dest": "/api/auth/login"
        },
        {
            "src": "/api/auth/checkConnection",
            "dest": "/api/auth/checkConnection"
        },
        {
            "src": "/api/test",
            "dest": "/api/test"
        },
        {
            "src": "/api/attendance/live",
            "dest": "/api/attendance/live"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/proxy?path=$1"
        }
    ],
    "functions": {
        "api/**/*.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    }
}